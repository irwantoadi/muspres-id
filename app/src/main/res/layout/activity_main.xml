<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="90dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/title"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/title">
                <!--        <ImageView-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:src="@drawable/header"-->
                <!--            android:layout_marginTop="-30dp"-->
                <!--            android:adjustViewBounds="true"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_menu_1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="#000000FF"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_kitab" />

                    <ImageButton
                        android:id="@+id/btn_menu_2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="#000000FF"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_alquran" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="@string/string_menu_1"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="@string/string_menu_2"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_menu_3"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="#000000FF"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_give" />

                    <ImageButton
                        android:id="@+id/btn_menu_4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="#000000FF"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_doa" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="@string/string_menu_3"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="@string/string_menu_4"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_menu_5"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="#000000FF"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_class" />

                    <ImageButton
                        android:id="@+id/btn_menu_6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="0.5"
                        android:background="#000000FF"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_voice" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="@string/string_menu_5"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="@string/string_menu_6"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"  />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>